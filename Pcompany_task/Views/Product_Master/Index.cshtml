@model Pcompany_task.Data_Context.Product_table
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("SaveOrUpdate", "Product_Master", FormMethod.Post))
{

    <div class="card-header">
        <h2>Product</h2>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label>Category</label>
                @Html.DropDownListFor(m => m.Category_id, new SelectList(ViewBag.State, "Value", "Text"),
                new { @class = "form-control ", onchange = "get_code()" })
                @Html.HiddenFor(m => m.Product_id)
                @Html.ValidationMessageFor(m => m.Category_id, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label>Product name</label>
                @Html.TextBoxFor(m => m.Product_name, new { @class = "form-control" })
                @Html.HiddenFor(m => m.Product_id)
                @Html.ValidationMessageFor(m => m.Product_name, "", new {@class="text-danger"})
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label>Price</label>
                @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
                @Html.HiddenFor(m => m.Product_id)
                @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <br />
    <br />
}
@Scripts.Render("~/bundles/jqueryval")
@Html.Action("Report")
