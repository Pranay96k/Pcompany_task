@model Pcompany_task.Data_Context.Category
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Save", "Category_Master", FormMethod.Post))
{
    <div class="card-header">
        <h2>Category</h2>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label>Category Name</label>
                @Html.TextBoxFor(m => m.Category1, new { @class = "form-control" })
                @Html.HiddenFor(m => m.Id)
                @Html.ValidationMessageFor(m => m.Category1, "", new { @class = "text-danger" })

            </div>
        </div>
    </div>
    <center><button type="submit" class="btn btn-success">Save</button></center>
}

@Scripts.Render("~/bundles/jqueryval")
@Html.Action("Report")

